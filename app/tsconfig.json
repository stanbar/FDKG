{
    "compilerOptions": {
        "target": "esnext",
        "lib": [
            "es6",
            "esnext",
            "esnext.bigint", 
            "dom",
            "es2015",

        ],
        "moduleResolution": "node",
        "module": "esnext",
        "types": [
            "mocha",
            "node"
        ],
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "exclude": [
        "build",
    ]
}